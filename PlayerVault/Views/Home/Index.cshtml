@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-center">Welcome to PlayerVault!</h1>
    <p class="lead text-center">Discover, scout, and manage players like a pro.</p>

    <a href="/Players" class="btn btn-primary btn-lg mt-3">Enter Vault</a>
</div>

@{
    var username = Context.Session.GetString("Username");
}

@if (string.IsNullOrEmpty(username))
{
    <div class="text-center mt-4">
        <a class="btn btn-primary me-2" asp-controller="Auth" asp-action="Login">Login</a>
        <a class="btn btn-success" asp-controller="Auth" asp-action="Register">Register</a>
    </div>
}
