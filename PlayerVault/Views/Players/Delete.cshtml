@model PlayerVault.Models.Player

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Player</h2>

<h3>Are you sure you want to delete this player?</h3>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Nationality</dt>
        <dd class="col-sm-10">@Model.Nationality</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Market Value</dt>
        <dd class="col-sm-10">@Model.MarketValue</dd>
    </dl>

    @* This form correctly posts to Players/Delete/{id} *@
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>